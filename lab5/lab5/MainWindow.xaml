<Window x:Class="lab5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab5"
        mc:Ignorable="d"
        Title="Shop Manager" Height="600" Width="800" MinHeight="500" MinWidth="500">
    <Grid>
        <Menu x:Name="menu" VerticalAlignment="Top">
            <MenuItem Header="File">
                <MenuItem Header="Load" HorizontalAlignment="Left" Width="145" IsEnabled="False"/>
                <MenuItem Header="Save" HorizontalAlignment="Left" Width="145" IsEnabled="False"/>
                <Separator HorizontalAlignment="Left" Width="145"/>
                <MenuItem Header="Exit" HorizontalAlignment="Left" Width="145" Click="MenuItem_Click_1"/>
            </MenuItem>
            <MenuItem Header="Products">
                <MenuItem Header="Add Products" HorizontalAlignment="Left" Width="145" Click="MenuItem_Click"/>
                <MenuItem Header="Clear products" HorizontalAlignment="Left" Width="145" IsEnabled="False"/>
            </MenuItem>
            <MenuItem Header="About" Click="MenuItem_Click_2"/>
        </Menu>
        <TabControl x:Name="tabControl" Margin="0,21,0,0">
            <TabItem Header="Shop&#xD;&#xA;" Height="26" VerticalAlignment="Top" IsSelected="True" Margin="10,0,-22,0">
                <Grid Background="#FFE5E5E5">
                    <ListBox x:Name="listBox" AlternationCount="2">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Style.Triggers>
                                    <Trigger Property="ItemsControl.AlternationIndex" Value="0">
                                        <Setter Property="Background" Value="#19f39611"></Setter>
                                    </Trigger>
                                    <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                        <Setter Property="Background" Value="#19000000"></Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid  Margin="0,2" HorizontalAlignment="Stretch" ScrollViewer.VerticalScrollBarVisibility="Visible">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="3*"/>
                                        <RowDefinition Height="1*"/>
                                        <RowDefinition Height="1*"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock FontSize="20" Text="{Binding Title}" Grid.Column="0" Grid.Row="0" />
                                    <TextBlock Text="{Binding Description}" Grid.Column="0" Grid.Row="1" />
                                    <TextBlock HorizontalAlignment="Right" Text="{Binding Price}" Grid.Column="1" Grid.Row="1" />
                                    <Button Click="Button_Click" Grid.Column="2" Grid.Row="1">
                                        <TextBlock>Add to cart</TextBlock>
                                    </Button>
                                    <TextBlock Text="{Binding Category}" Grid.Column="0" Grid.Row="2" />
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </TabItem>
            <TabItem Header="Cart" Margin="110,0,-114,0" IsEnabled="False">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Warehouse" Height="26" VerticalAlignment="Top" Margin="-8,0,8,0">
                <DataGrid Name="dg" />
            </TabItem>
        </TabControl>

    </Grid>
</Window>
